{
  "env": {
    "node": true,
    "es2020": true,
    "browser": false
  },
  "plugins": ["node"],
  "rules": {
    "no-undef": 2,
    "no-var": 2, // 禁止使用 var
    "no-console": 1, // console提醒
    "complexity": [1, 10], // 函数圈复杂度阈值设为 10
    "no-unused-vars": 1, // 避免无用变量
    "eqeqeq": [2, "always"], // 要求 === / !==
    "prefer-const": 2, // 如果变量没被重新赋值，优先 const
    "no-debugger": 2 // 禁止 debugger 语句
  }
}
